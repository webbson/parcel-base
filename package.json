{
  "name": "parcel-base",
  "version": "1.0.0",
  "description": "Simple base to be used for site development, both in starting face without backend and later with a backend.",
  "repository": "https://github.com/webbson/parcel-base",
  "private": true,
  "scripts": {
    "dev": "parcel ./pages/*.html",
    "watch": "parcel watch frontend.ts --out-dir F:/path-to-site-on-local-server/dist --public-url ./",
    "build": "parcel build frontend.ts --out-dir ./build --public-url ./"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "IE 11"
  ],
  "author": "Tom Stevens",
  "devDependencies": {
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-clean-dist": "0.0.6",
    "parcel-plugin-css-url-loader": "^1.0.5",
    "parcel-plugin-tslint": "0.0.2",
    "sass": "^1.26.10",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  }
}
